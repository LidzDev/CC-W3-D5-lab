{% extends "base.jinja" %} {% block content %}

<hr>
{% for book in books %}
    <ul>
        <li> <form name="delete_book" action="/library/delete/{{book.isbn}}" method="post"><a href="/library/{{book.isbn}}">{{book.title}}</a> by {{book.author}}, genre: {{book.genre}}
       <input type="submit" value="Delete Book"/></form> </li>
    </ul>
{% endfor %} 

<hr style="border: 1px solid black;">

<form name="add_book" action="/library" method="post">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" required="yes"/>
    <label for="author">Author</label>
    <input type="text" name="author" id="author" required="yes"/>
    <label for="genre">genre</label>
    <select name="genre" id="genre" required="yes">
        <option value="Programming">Programming</option>
        <option value="Science Fiction">Sci-Fi</option>
        <option value="Fantasy">Fantasy</option>
        <option value="Mountaineering">Mountaineering</option>
    </select>
    <label for="isbn">ISBN</label>
    <input type="text" name="isbn" id="isbn" required="yes"/>   
    <input type="submit" value="Add Book"/>   
</form>
{% endblock %}
